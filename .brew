#!/usr/bin/env bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

brew install qt

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils
# Install Bash 4
brew install bash

# Install wget with IRI support
brew install wget --enable-iri

brew install ssh-copy-id

# Install more recent versions of some OS X tools
brew tap homebrew/dupes
brew install homebrew/dupes/grep

# Some basics to make PHP install easier: https://github.com/josegonzalez/homebrew-php
brew install freetype jpeg libpng gd zlib


# Install other useful binaries
brew install ack
brew install git
brew install imagemagick


brew install android-sdk

brew install redis
brew install memcached

# mkdir -p ~/Library/LaunchAgents
#    cp /usr/local/Cellar/redis/2.4.8/homebrew.mxcl.redis.plist ~/Library/LaunchAgents/
#    launchctl load -w ~/Library/LaunchAgents/homebrew.mxcl.redis.plist


brew install node

# Install native apps
brew tap phinze/homebrew-cask
brew tap jimbojsb/launchrocket

brew install brew-cask

function installcask() {
	if brew cask info "${@}" | grep "Not installed" > /dev/null; then
		brew cask install "${@}" --appdir="/Applications"
	else
		echo "${@} is already installed."
	fi
}

installcask alfred
installcask anvil
installcask bartender
installcask dropbox
installcask evernote
installcask fantastical
installcask firefox
installcask google-chrome
installcask google-hangouts
installcask google-drive
installcask hipchat
installcask imagealpha
installcask imageoptim
installcask iterm2
installcask jewelrybox
installcask kaleidoscope
installcask little-snitch
installcask livereload
installcask miro-video-converter
installcask mou
installcask querious
installcask rescuetime
installcask rubymine
installcask skype
installcask spotify
installcask steam
installcask strongvpn-client
installcask sublime-text
installcask tower
installcask transmission
installcask transmit
installcask virtualbox
installcask vlc
installcask webstorm
installcask xtra-finder

installcask qlcolorcode
installcask qlstephen
installcask qlmarkdown
installcask quicklook-json
installcask qlprettypatch
installcask quicklook-csv
installcask betterzipql
installcask webp-quicklook
installcask suspicious-package
installcask qlmanage

brew cask install launchrocket

echo "DON'T FORGET: Add '/opt/homebrew-cask/Caskroom' To Alfred's search scope (Settings > Features > Default Results"

defaults write com.apple.finder QLEnableTextSelection -bool true && killall Finder

# Link Sublime 2 in terminal
ln -s /Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl /usr/local/bin/sublime

# Remove outdated versions from the cellar
brew cleanup
